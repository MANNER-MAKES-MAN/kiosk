    <Label layoutX="382.0" layoutY="15.0" style="-fx-font-size: 20px; -fx-text-fill: black;" text="주문 내역 확인" />
    <Label layoutX="27.0" layoutY="15.0" style="-fx-font-size: 20px; -fx-text-fill: black;" text="MENU" />

    <!-- 왼쪽 포스터 영역 -->
    <Rectangle fill="#D9D9D9" height="397" layoutX="27" layoutY="58" width="300" />
    <Label layoutX="128" layoutY="245" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: black;" text="포스터 사진" />

    <!-- 주문 항목 영역 -->
    <ScrollPane layoutX="347" layoutY="53" prefHeight="288" prefWidth="439">
        <AnchorPane fx:id="orderPane" prefHeight="288" prefWidth="439" />
    </ScrollPane>

    <!-- 결제 금액 -->
    <Rectangle fill="#D9D9D9" layoutX="357.0" layoutY="341.0" width="412.0" height="47.0" />
    <Label layoutX="375.0" layoutY="351.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4F4F4F;" text="결제 금액" />
    <Label fx:id="totalPriceLabel" layoutX="667.0" layoutY="355.0" style="-fx-font-size: 20px; -fx-text-fill: black;" text="0원" />

