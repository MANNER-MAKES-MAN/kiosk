    <AnchorPane layoutX="361.0" layoutY="395.0" prefHeight="80.0" prefWidth="412.0">
        <Pane fx:id="cardPayment" layoutX="7.0" layoutY="6.0" onMouseClicked="#cpClicked">
            <children>
                <Rectangle accessibleRole="BUTTON" fill="#D9D9D9" height="68" width="190" />
                <Label layoutX="13.0" layoutY="8.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: black;" text="카드 결제" />
                <Label layoutX="13.0" layoutY="45.0" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: black;" text="신용 카드/삼성 페이" />
