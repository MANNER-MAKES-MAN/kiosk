       <Button fx:id="backButton" layoutX="15" layoutY="426" prefHeight="39" prefWidth="84" style="-fx-font-size: 24px; -fx-font-family: 'Inter'; -fx-font-weight: bold;                    -fx-background-color: white; -fx-background-radius: 30;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0, 1, 1);" text="이전" />
   
